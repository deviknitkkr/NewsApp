<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:animateLayoutChanges="true"
	android:background="@drawable/button_background_outlined"
	android:padding="16dp">

	<android.support.v7.widget.CardView
		xmlns:app="http://schemas.android.com/apk/res-auto/android"
		android:layout_width="100dp"
		android:layout_height="100dp"
		app:cardCornerRadius="8dp"
		android:id="@+id/cardview"
		android:layout_alignParentRight="true">

		<ImageView
			android:layout_width="100dp"
			android:id="@+id/article_image"
			android:layout_height="100dp"
			android:scaleType="centerCrop"/>

	</android.support.v7.widget.CardView>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Large Text"
		android:textSize="18sp"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_toLeftOf="@id/cardview"
		android:layout_alignParentLeft="true"
		android:id="@+id/article_source_name"
		android:layout_marginEnd="12dp"
		android:textStyle="bold"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Medium Text"
		android:textSize="16sp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_toLeftOf="@id/cardview"
		android:layout_below="@id/article_source_name"
		android:layout_marginEnd="12dp"
		android:layout_alignParentLeft="true"
		android:id="@+id/article_title"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="140dp"
		android:layout_height="1dp"
		android:layout_below="@id/article_title"
		android:layout_marginTop="12dp"
		android:id="@+id/rowitemView1"
		android:layout_marginBottom="12dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Small Text"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@id/rowitemView1"
		android:id="@+id/article_publish_time"/>

	<ImageButton
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/rowitemView1"
		android:layout_centerHorizontal="true"
		android:id="@+id/article_explore"
		android:layout_marginBottom="4dp"
		android:background="@drawable/button_exploremore"
		android:src="@drawable/ic_expand_more_black_24dp"
		android:elevation="4dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Medium Text"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_below="@id/article_explore"
		android:id="@+id/article_content"
		android:textSize="16sp"
		android:visibility="gone"/>

</RelativeLayout>

